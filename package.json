{
  "name": "tbdflow-vscode-extension",
  "displayName": "tbdflow",
  "description": "Adds a tbdflow Activity Bar view that shows a simple panel.",
  "version": "0.8.0",
  "publisher": "local",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hekonsek/tbdflow-vscode-extension.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test": "npm run compile && node ./out/test/runTest.js"
  },
  "activationEvents": [
    "onStartupFinished",
    "onView:tbdflow.view",
    "onCommand:tbdflow.openPanel",
    "onCommand:tbdflow.newBranch",
    "onCommand:tbdflow.completeBranch",
    "onCommand:tbdflow.generateChangelog",
    "onCommand:tbdflow.sync",
    "onCommand:tbdflow.status",
    "onCommand:tbdflow.currentBranch",
    "onCommand:tbdflow.checkBranches"
  ],
  "contributes": {
    "configuration": {
      "title": "tbdflow",
      "properties": {
        "tbdflow.gitProjectAwareness.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Hide tbdflow commands and views when the current workspace is not a Git repository. Automatically disabled while debugging the extension (F5)."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tbdflow",
          "title": "tbdflow Commit",
          "icon": "media/tbdflow.svg",
          "when": "tbdflow.isGitRepo || !tbdflow.gitAwarenessEnabled"
        }
      ]
    },
    "views": {
      "tbdflow": [
        {
          "type": "webview",
          "id": "tbdflow.view",
          "name": "tbdflow Panel",
          "when": "tbdflow.isGitRepo || !tbdflow.gitAwarenessEnabled"
        }
      ]
    },
    "commands": [
      {
        "command": "tbdflow.openPanel",
        "title": "Open Panel",
        "category": "tbdflow"
      },
      {
        "command": "tbdflow.newBranch",
        "title": "New Branch",
        "category": "tbdflow"
      },
      {
        "command": "tbdflow.completeBranch",
        "title": "Complete Branch",
        "category": "tbdflow"
      },
      {
        "command": "tbdflow.generateChangelog",
        "title": "Generate Changelog",
        "category": "tbdflow"
      },
      {
        "command": "tbdflow.sync",
        "title": "Sync",
        "category": "tbdflow"
      },
      {
        "command": "tbdflow.status",
        "title": "Status",
        "category": "tbdflow"
      },
      {
        "command": "tbdflow.currentBranch",
        "title": "Current Branch",
        "category": "tbdflow"
      },
      {
        "command": "tbdflow.checkBranches",
        "title": "Check Stale Branches",
        "category": "tbdflow"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "tbdflow.openPanel",
          "when": "tbdflow.isGitRepo || !tbdflow.gitAwarenessEnabled"
        },
        {
          "command": "tbdflow.newBranch",
          "when": "tbdflow.isGitRepo || !tbdflow.gitAwarenessEnabled"
        },
        {
          "command": "tbdflow.completeBranch",
          "when": "tbdflow.isGitRepo || !tbdflow.gitAwarenessEnabled"
        },
        {
          "command": "tbdflow.generateChangelog",
          "when": "tbdflow.isGitRepo || !tbdflow.gitAwarenessEnabled"
        },
        {
          "command": "tbdflow.sync",
          "when": "tbdflow.isGitRepo || !tbdflow.gitAwarenessEnabled"
        },
        {
          "command": "tbdflow.status",
          "when": "tbdflow.isGitRepo || !tbdflow.gitAwarenessEnabled"
        },
        {
          "command": "tbdflow.currentBranch",
          "when": "tbdflow.isGitRepo || !tbdflow.gitAwarenessEnabled"
        },
        {
          "command": "tbdflow.checkBranches",
          "when": "tbdflow.isGitRepo || !tbdflow.gitAwarenessEnabled"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^16.18.0",
    "@types/vscode": "1.74.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "glob": "^10.3.10",
    "mocha": "^10.7.3",
    "typescript": "^5.5.0"
  }
}
